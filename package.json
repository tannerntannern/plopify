{
  "name": "plopify",
  "private": true,
  "description": "A Plop-inspired tool that takes project templating to the next level.",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "loop": "node scripts/loop.js",
    "build:clean": "rimraf packages/*/dist",
    "build:ts": "yarn loop tsc",
    "build": "yarn build:clean && yarn build:ts",
    "lint": "eslint packages/**/*.ts",
    "test": "nyc mocha",
    "coverage": "nyc report",
    "coveralls": "cat coverage/lcov.info | coveralls",
    "release": "standard-version -a"
  },
  "standard-version": {
    "scripts": {
      "prerelease": "yarn lint && yarn test && yarn build"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "@types/chai": "^4.1.7",
    "@types/inquirer": "^6.0.3",
    "@types/mocha": "^5.2.5",
    "@types/node": "^12.6.8",
    "@types/sinon": "^7.0.9",
    "@typescript-eslint/parser": "^1.12.0",
    "chai": "^4.2.0",
    "coveralls": "^3.0.2",
    "eslint": "^6.0.1",
    "husky": "^3.0.1",
    "mocha": "^6.2.0",
    "mock-fs": "^4.8.0",
    "nyc": "14.1.1",
    "rimraf": "^2.6.3",
    "sinon": "^7.2.7",
    "standard-version": "^6.0.1",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.3"
  },
  "engines": {
    "node": ">=8"
  },
  "keywords": [
    "template",
    "templating",
    "scaffold",
    "scaffolding",
    "plop",
    "plop.js",
    "project scaffolding",
    "project templating"
  ],
  "homepage": "https://tannerntannern.github.io/plopify",
  "repository": {
    "type": "git",
    "url": "https://github.com/tannerntannern/plopify.git"
  },
  "author": "Tanner Nielsen <tannerntannern@gmail.com>",
  "license": "MIT"
}
