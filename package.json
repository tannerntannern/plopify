{
  "name": "plopify",
  "version": "0.1.0-alpha.0",
  "description": "An extension of Plop.js that takes project templating to the next level.",
  "files": [
    "dist"
  ],
  "bin": {
    "plopify": "dist/bin.js"
  },
  "scripts": {
    "build": "tsc",
    "build-clean": "rm -rf ./dist && yarn build",
    "watch": "yarn build -- --watch",
    "lint": "eslint src/**/*.ts",
    "test": "nyc mocha --recursive -r ts-node/register test/**/*.test.*",
    "coverage": "nyc report",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "release": "standard-version -a"
  },
  "standard-version": {
    "scripts": {
      "prerelease": "yarn lint && yarn test && yarn build-clean"
    }
  },
  "dependencies": {
    "chalk": "^2.4.2",
    "commander": "^2.19.0",
    "glob": "^7.1.3",
    "inquirer": "^6.2.2",
    "io-ts": "^1.8.1",
    "node-plop": "^0.17.3",
    "rc.ts": "^1.2.0",
    "rimraf": "^2.6.3",
    "valid-url": "^1.0.9"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.3.2",
    "@commitlint/config-conventional": "^7.3.1",
    "@types/chai": "^4.1.7",
    "@types/inquirer": "^0.0.43",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.18",
    "chai": "^4.2.0",
    "coveralls": "^3.0.2",
    "eslint": "^5.12.0",
    "husky": "^1.3.1",
    "mocha": "^5.2.0",
    "nyc": "12.x.x",
    "standard-version": "^4.4.0",
    "ts-node": "^7.0.1",
    "typescript": "^3.2.2",
    "typescript-eslint-parser": "^21.0.2"
  },
  "keywords": [
    "template",
    "templating",
    "scaffold",
    "scaffolding",
    "plop",
    "plop.js",
    "project scaffolding",
    "project templating"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/tannerntannern/plopify.git"
  },
  "author": "Tanner Nielsen <tannerntannern@gmail.com>",
  "license": "MIT"
}
